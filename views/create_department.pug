doctype html
html
  head
    title Bangazon Workforce
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    
    style(type="text/css").
      body {
        margin: 0;
        padding: 0;
        font-family: "open sans", arial, sans-serif;
      }
      h1, h3 {
        font-family: roboto, arial, sans-serif;
        text-transform: uppercase;
        font-weight: bold;
        color: #004165;
      }
      .nav-wrapper {
        background-color: #004165;
      }
      .btn-floating {
        background-color: #004165;
      }
      .btn-floating.btn-large.waves-effect.waves-light {
        margin: 0 45%;
      }
      .card {
        background-color: #004165;
      }
  body
    .navbar-fixed
      nav
        .nav-wrapper
          a(href="#!" class="brand-logo") Bangazon Workforce
          ul(class="right hide-on-med-and-down")
            li
              a(href="/") Home
            li
              a(href="/employee") Employees
            li
              a(href="/department") Departments
            li
              a(href="/computer") Computers

    .container
      .row
        h3 Enter Department Information
      .row
        form(class="col s12" method="POST" action='/add-new-department')
          .row
            div(class="input-field col s6")
              input(id="name" type="text" class="validate" name="name")
              label(for="name") Department Name
          .row
            div(class="input-field col s6")
              select(id="select_supervisor" name="select_supervisor")
                option(value="" disabled selected) Select Supervisor
                each emp in employee
                  option #{emp.first_name + " " + emp.last_name}
              label Supervisor
          .row
            button(type="submit") Submit New Department
  script
    include ..//node_modules/jquery/dist/jquery.min.js
    include ../node_modules/materialize-css/dist/js/materialize.min.js
    include ../javascripts/main.js